<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:measureAllChildren="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DangNhapActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:background="@drawable/backgrounddn"
        android:scaleType="centerCrop"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:background="@drawable/custom_backgroundlogin">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="LOGIN"
                android:textColor="#FF9800"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:textColor="#FF5722"
                android:id="@+id/textviewcanhbaodangnhap"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="10dp"
                    android:hint="Nhập Email Hoặc SĐT Người Dùng"
                    android:padding="10dp"></EditText>

                <EditText
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="10dp"
                    android:hint="Nhập Mật Khẩu Người Dùng"
                    android:inputType="textPassword"
                    android:padding="10dp"></EditText>
            </LinearLayout>

            <Button
                android:id="@+id/btn_dangnhap"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_login"
                android:text="ĐĂNG NHẬP"
                android:textColor="@color/orrange"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/btn_dangky"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_login"
                android:text="ĐĂNG KÝ"
                android:textColor="@color/orrange"
                android:textStyle="bold"></Button>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>