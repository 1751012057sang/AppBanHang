<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.ThongTinKhachHang">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/border"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="30dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:gravity="center"
            android:text="Thông Tin Khách Hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:textSize="22sp"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/login"
            android:hint="Nhập Tên Khác Hàng"
            android:id="@+id/edittexttenkhachhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:textSize="22sp"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/phone"
            android:hint="Nhập Số Điện Thoại"
            android:id="@+id/edittexttsdtkhachhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:textSize="22sp"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/email"
            android:hint="Nhập Địa Chỉ Mail "
            android:id="@+id/edittexttmailkhachhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:textColor="#FF9800"
                android:background="@drawable/custom_login"
                android:id="@+id/buttonxacnhankhachhang"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="Xác Nhận"
                android:layout_width="100dp"
                android:layout_height="50dp" />
            <Button
                android:textColor="#FF9800"
                android:background="@drawable/custom_login"
                android:id="@+id/buttonhukhachhang"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Trở Về"
                android:layout_width="100dp"
                android:layout_height="50dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>